{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": { "AWS": "*" },
        "Action": ["s3:GetObject"],
        "Resource": [
          "arn:aws:s3:::lms/static/*",
          "arn:aws:s3:::lms/media/*",
          "arn:aws:s3:::lms/asset/*"
        ]
      },
      {
        "Effect": "Allow",
        "Principal": { "AWS": "*" },
        "Action": ["s3:PutObject", "s3:GetObject", "s3:DeleteObject"],
        "Resource": "arn:aws:s3:::lms/*",
        "Condition": {
          "StringEquals": { "s3:signatureversion": "AWS4-HMAC-SHA256" }
        }
      }
    ]
  }
  